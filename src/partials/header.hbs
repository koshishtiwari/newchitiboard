{{!-- the header all pages--}}
<header class="pageHeader">
    <a class="siteLogo" href="{{@website.url}}">

        {{!-- switch img and text as necessary --}}
        {{#if @website.logo}}
            <img src="{{@website.logo}}" alt="{{@website.name}}" width="{{@website.logoSize.width}}" height="{{@website.logoSize.height}}">
        {{else}}
            {{@website.name}}
        {{/if}}

    </a>

    {{!-- the top Menu partials --}}
    {{#if menus.mainMenu}}
         {{> menu menus.mainMenu}}
    {{/if}}

</header>