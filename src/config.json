{
    "name": "ChitiBoard",
    "version": "1.0.8",
    "author": "Jeigsaw <https://codepen.io/Jeigsaw/>",
    "menus": {
        "mainMenu": "Main menu"
    },
    "renderer": {
        "relatedPostsNumber": 3,
        "renderRelatedPosts": true,
        "renderSimilarPosts": false,
        "renderPrevNextPosts": true,
        "createContentStructure": true,
        "createTagPages": true,
        "createAuthorPages": true,
        "createTagsList": true,
        "createSearchPage": false,
        "create404page": true
    },
    "supportedFeatures": {
        "blockEditor": false,
        "tagsList": true,
        "tagPages": true,
        "tagImages": false,
        "authorPages": true,
        "authorImages": true,
        "searchPage": true,
        "errorPage": true,
        "customComments": true
    },
    "config": [

        {
            "name": "logo",
            "label": "Chiti logo",
            "value": "",
            "type": "upload",
            "upload": true
        },
        {
            "name": "postsPerPage",
            "label": "Posts per page",
            "value": 5,
            "type": "number"
        },
        {
            "name": "tagsPostsPerPage",
            "label": "Tags posts per page",
            "value": 5,
            "type": "number"
        },
        {
            "name": "excerptLength",
            "label": "Excerpt length",
            "value": 45,
            "type": "number"
        }
    ],
    "customConfig": [
        {
            "name": "primaryColor",
            "label": "Primary color",
            "group": "colors",
            "value": "#334499",
            "type": "colorpicker"
        }
    ],

    "files": {
        "responsiveImages": {
            "contentImages": {
                "sizes": "100vw",
                "dimensions": {
                    "xs": {
                        "width": 300,
                        "height": "auto"
                    },
                    "sm": {
                        "width": 480,
                        "height": "auto"
                    },
                    "md": {
                        "width": 768,
                        "height": "auto"
                    },
                    "lg": {
                        "width": 1024,
                        "height": "auto"
                    },
                    "xl": {
                        "width": 1360,
                        "height": "auto"
                    },
                    "2xl": {
                        "width": 1600,
                        "height": "auto"
                    }
                }
            },
            "featuredImages": {
                "sizes": {
                    "post": "(max-width: 1600px) 100vw, 1600px"
                },

                "dimensions": {
                    "xs": {
                        "width": 300,
                        "height": "auto",
                        "group": "post,amp"
                    },
                    "sm": {
                        "width": 480,
                        "height": "auto",
                        "group": "post,amp"
                    },
                    "md": {
                        "width": 768,
                        "height": "auto",
                        "group": "post,amp"
                    },
                    "lg": {
                        "width": 1024,
                        "height": "auto",
                        "group": "post"
                    },
                    "xl": {
                        "width": 1360,
                        "height": "auto",
                        "group": "post"
                    },
                    "2xl": {
                        "width": 1600,
                        "height": "auto",
                        "group": "post"
                    }
                }
            },
            "authorImages": {
                "sizes": "100vw",
                "dimensions": {
                    "xs": {
                        "width": 300,
                        "height": "auto"
                    },
                    "sm": {
                        "width": 480,
                        "height": "auto"
                    },
                    "md": {
                        "width": 768,
                        "height": "auto"
                    },
                    "lg": {
                        "width": 1024,
                        "height": "auto"
                    },
                    "xl": {
                        "width": 1360,
                        "height": "auto"
                    },
                    "2xl": {
                        "width": 1600,
                        "height": "auto"
                    }
                }
            }
        }
    },

    "customElements": [
        {
            "label": "Custom Element name in Post Editor",
            "cssClasses": "class_name_to_add_to_this_html_tag",
            "tag": "html_tag_name_to_wrap_it"
